# NorthVia E-commerce Platform Configuration

# Application Settings
APP_NAME="NorthVia"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://northvia.com
APP_TIMEZONE=Africa/Lagos

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=northvia
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=2592000

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@northvia.com
MAIL_FROM_NAME="NorthVia Platform"

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_VERIFY_SERVICE_SID=

# Payment Gateway Configuration
# Paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_URL=https://northvia.com/api/webhooks/paystack

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_ENCRYPTION_KEY=
FLUTTERWAVE_WEBHOOK_URL=https://northvia.com/api/webhooks/flutterwave

# File Storage
STORAGE_DRIVER=local
STORAGE_ROOT=storage
STORAGE_PUBLIC_URL=https://northvia.com/storage

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=northvia-storage

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning
LOG_SLACK_WEBHOOK_URL=

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_MAX_RISK_SCORE=75
FRAUD_AUTO_BLOCK_THRESHOLD=90

# Rate Limiting
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_WINDOW=3600

# Search Configuration
SEARCH_DRIVER=database
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX=northvia

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=northvia
CACHE_DEFAULT_TTL=3600

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Security
ENCRYPTION_KEY=
HASH_ALGORITHM=bcrypt
HASH_ROUNDS=12

# Nigerian Payment Providers
BANK_VERIFICATION_API_KEY=
BANK_VERIFICATION_BASE_URL=

# Google Services
GOOGLE_MAPS_API_KEY=
GOOGLE_ANALYTICS_ID=

# Social Media
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Monitoring
SENTRY_DSN=
BUGSNAG_API_KEY=

# Feature Flags
FEATURE_MULTI_CURRENCY=true
FEATURE_AFFILIATE_PROGRAM=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_LIVE_CHAT=true
FEATURE_PUSH_NOTIFICATIONS=true

# Nigerian Specific
DEFAULT_CURRENCY=NGN
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ha,yo,ig
VAT_RATE=7.5